<html lang="en">

<head>
     <%- include('../partials/head'); %>
</head>

<body class="container">


     <header>
          <%- include('../partials/header'); %>
     </header>
     <form action="new">
          <div style="display: flex; flex-direction: column; gap: 10px; align-items: center;">

          <label>
               Nome do Empregado: 
          <input type="text" required placeholder="nome" name="name">
          </label>
          <label>
               Email do Empregado: 
          <input type="email" name="email" required placeholder="email.do_empregado@aqui.com">
          </label>
          <label>
               Telefone do Empregado: 
          <input type="tel" required name="telephone" placeholder="(54) 99198-2471">
          </label>
          <label>
               Empresa do Empregado: 
          <input type="text" required name="company" placeholder="nome da empresa">
          </label>
<button type="submit">
     Enviar
</button>
          </div>

     </form>
<footer>
     <%- include('../partials/footer'); %>
</footer>
</body>
</html>