<!DOCTYPE html>    
<div>
     <div>
     <form action="/funcionarios/novo">
          <button type="submit">adicionar novo funcionario</button>
     </form>
     </div>
     <div>
          <form>

          <button name="ordem" value="<%= ordem %>">
               Criado em
          </button>

          <button name="agruparpor" value="empresa">
               nome da empresa
          </button>
          </form>
     </div>
<ul>
     <% funcionarios.forEach(function(funcionario) { %>
          <li>
               <p>
                    Nome: <%= funcionario.nome %>
               </p>

               <p>
                    email: <%= funcionario.email %>
               </p>
               <p>
                    telefone: <%= funcionario.telefone %>
               </p>
               <p>
                    empresa: <%= funcionario.empresa %>
               </p>

               <form action="/funcionarios/<%= funcionario.id %>/editar">
